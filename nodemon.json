{
  "restartable": "rs",
  "ignore": [".gitinore", "node_modules/**/node_modules", "dist"],
  "verbose": true,
  "execMap": {
    "ts": "node"
  },

  "runOnChangeOnly": false,
  "watch": ["src/**/*.ts"],
  "env": {
    "NODE_ENV": "development"
  },
  "exec": "ts-node --inspect ./src/index.ts",
  "ext": "ts"
}
