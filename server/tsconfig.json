{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "lib": ["esnext"],
    "strictNullChecks": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    ".vscode",
    ".gitignore",
    "yarn.lock",
    "./dist/**/*.js"
  ]
}
